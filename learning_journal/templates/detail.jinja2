{% extends "layout.jinja2" %}
{% block body %}
<article>
  <h1>{{ entry.title|markdown }}</h1>
  <p>{{ entry.body|markdown }}</p>
  {#
  <h1>{{ entry.title }}</h1>
  <hr/>
  <p>{{ entry.body }}</p>
  #}
  <hr/>
  <p>Created <strong title="{{ entry.created }}">{{entry.created}}</strong></p>
</article>
    {% if logged_in %}
    <p><a href="{{ request.route_url('action', action='edit', _query={'id':entry.id}) }}">Edit Entry</a></p>
    {% endif %}
    <p><a href="{{ request.route_url('home') }}">Go Back</a></p>
{% endblock %}
